<!DOCTYPE html>
<html lang="en">
<head>
    <title>WorkoutTracker</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href = "styles.css">
</head>

<body>
    <%- include('navbar.ejs') -%>

    <div class="main-div">
        <% if (user) { %>
            <h2> Welcome Back <%= user.fullname %>!</h2>
        <% } %>
        <div class="home-divider">
            <button id="startWorkout" class="styledBtn">Start Workout</button>
        </div>
        <div class="home-divider">
            <button id="goals-btn" class="styledBtn">Set Goals</button>
            <div style="margin-top:100px">
                <h3>Here are your current goals!</h3>
                <div id="general-goalsdisplay">
                    <h3>General Goals:</h4>
                </div>
                <div id="lift-goalsdisplay">
                    <h3>Lift Goals:</h4>
                </div>
            </div>
        </div>

        <div id="workout-modal" class="modal">
            <div class="modal-content">
                <span class="close" id="wspan">&times;</span>
                <form action="/finishWorkout" method="POST">
                    <h3>EXERCISE TRACKER</h3>

                    <label class="modal-label">Workout Name:</label>
                    <input type="text" name="workoutName">
                    <div id="stopwatch" class="stopwatch"></div>
                    <input type="text" id="duration" class="hiddenInput" name="duration">

                    <div id="exercises">
                        <h5>Exercises</h5>
                    </div>
                    <input type="text" placeholder="Add new exercise" id="addExercise" class="modal-input">
                    <button type="button" id="addExerciseBtn" class="action-btn">+</button>


                    <button id="finish" type="submit" class="action-btn">FINISH</button>
                    <button id="reset" type="button" class="action-btn">RESET</button>
                </form>
            </div>
        </div>

        <div id="goals-modal" class="modal">
            <div class="modal-content">
                <span class="close" id="gspan">&times;</span>
                <form action="/updateGoals" method="POST">
                    <h3>UPDATE GOALS</h3>
                    <div id="goals-gen">
                        <h3>General</h3>
                        <div id="genGoal-weight">
                            <label class="modal-label" name="Weight">Weight</label>
                            <input type="text" placeholder="Current Weight" name="currentWeight">
                            <input type="text" placeholder="Desired Weight" name="desiredWeight">
                            <input type="hidden" name="hidden-Weight" value="General">
                        </div>
                    </div>
                    <input type="text" placeholder="Enter general goal" id="addGGInput">
                    <button type="button" id="addGenGoalBtn" class="add-button">+</button>

                    <div id="goals-lift">
                        <h5>Lifts</h5>
                        <div id="liftGoal-BP">
                            <label>Bench Press</label>
                            <input type="text" placeholder="Current PR" name="currentBench Press">
                            <input type="text" placeholder="Desired PR" name="desiredBench Press">
                            <input type="hidden" name="hidden-BP" value="Lift">
                        </div>

                    </div>
                    <input type="text" placeholder="Enter lift goal" id="addLiftGoalInput">
                    <button type="button" id="addLiftGoalBtn" class="add-button">+</button>
                    <br>
                    <button id="clear" type="button" >Clear</button>
                    <button id="apply" type="submit" class="applyBtn">Apply</button>
                </form>
            </div>
        </div>

    </div>

    <% userGoals = user.goals %>

    <script src="main.js">
    </script>
    <script>

        var genDisplayDiv = document.getElementById("general-goalsdisplay");
        var liftDisplayDiv = document.getElementById("lift-goalsdisplay");

        "<%userGoals.forEach(function(goal) {%>"
            var pGoal = document.createElement("p")
            pGoal.innerHTML = "<%-goal.name%>" + " - Start: " + "<%-goal.start%>" + " Goal: " + "<%-goal.goal%>" 
            pGoal.style.marginLeft = "25px";
            if ("<%-goal.type%>" == "General") {
                genDisplayDiv.appendChild(pGoal);
            } else {
                liftDisplayDiv.appendChild(pGoal);
            }
        "<%});%>"
            
    </script>
        
</body>
</html>

