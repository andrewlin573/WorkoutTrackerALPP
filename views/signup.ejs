<!DOCTYPE html>
<html lang="en">
<head>
    <title>WorkoutTracker</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href = "styles.css">
</head>
<body>
    <%- include ('navbar.ejs') -%>

    <div class="main-div">
        <div class="container">

            <p>Password Requirements:</p>
            <ul>At least 6 characters</ul>

            <br>
            <br>

            <% if(typeof errors!= 'undefined') { %>
            <%    errors.forEach(function(error){ %>
            <p> <%= error.msg %></p>
            <%    })        %>
            <% } %>

            <form class="login-form" action="/user/signup" method="POST">
                <input class="login-form-input" type="text" placeholder="Username" name="username">
                <input class="login-form-input" type="password" placeholder="Password" name="password">
                <input class="login-form-input" type="text" placeholder="Full Name" name="fullname">
                <input class="login-form-input" type="text" placeholder="Email" name="email">
                <button class="login-btn" type="submit">Sign Up</button>
            </form>
            <p >Have An Account? <a class="signup" href="/user/login">Login</a></p>
        </div>
    </div>

    <script>
    </script>
</body>
</html>